{
  "extends": ["standard"],
  "plugins": ["prettier"],
  "rules": {
    "indent": "off",
    "indent-legacy": ["error", 2],
    "max-len": ["error", 80],
    "no-undef": "off",
    "space-before-function-paren": [
      "error",
      { "anonymous": "always", "named": "never", "asyncArrow": "always" }
    ],
    "comma-dangle": "off",
    "key-spacing": ["error", { "align": "value" }],
    "operator-linebreak": ["error", "before"]
  }
}
